<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:persistent="true"
    android:windowBackground="?attr/colorBackgroundFloating">

    <SwitchPreference
        android:defaultValue="false"
        android:key="switch_preference_1"
        android:title="Switch preference" />
    <ListPreference
        android:defaultValue="3"
        android:entries="@array/timeout"
        android:entryValues="@array/timeout"
        android:key="preference_timeout"
        android:summary="Select timeout in minutes"
        android:title="Timeout" />
    <ListPreference
        android:defaultValue="MULTIDIVI"
        android:entries="@array/operators"
        android:entryValues="@array/operators"
        android:key="preference_operators"
        android:summary="Select type of calculations"
        android:title="Calculation type" />
    <ListPreference
        android:defaultValue="12"
        android:entries="@array/calcRange"
        android:entryValues="@array/calcRange"
        android:key="preference_calcRange"
        android:summary="Select maximum range for numbers used"
        android:title="Calculation range" />
    <DropDownPreference
        android:defaultValue="3"
        android:dialogIcon="@android:drawable/arrow_down_float"
        android:entries="@array/nElements"
        android:entryValues="@array/nElements"
        android:gravity="right"
        android:key="preference_nElements"
        android:title="Number of calculations" />

</android.support.v7.preference.PreferenceScreen>